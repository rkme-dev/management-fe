ALA;QAMAC;MANA,CAxBA;MAgCAC;QACAN,QADA;QAEAK,WAFA;QAGAJ,eAHA;QAIAC,QAJA;QAKAC,gBALA;QAMAC;MANA,CAhCA;MAwCAG;IAxCA;EAAA,CAxCA;EAmFAC;IACAC,SADA,uBACA;MACA;MACA;MAEA;IACA,CANA;IAOAC,SAPA,uBAOA;MACA;IACA,CATA;IAUAC,OAVA,qBAUA;MACA;IACA;EAZA,CAnFA;EAkGA1C;IACAsB,MADA,kBACAqB,GADA,EACA;MACA;IACA,CAHA;IAIApB,YAJA,wBAIAoB,GAJA,EAIA;MACA;IACA;EANA,CAlGA;EA0GAC,OA1GA,qBA0GA;IACA;IACA;EACA,CA7GA;EA8GAC;IACAC,eADA,2BACAlB,KADA,EACA;MAAA;;MACA;MACA;MACA;MACA;MAEAmB;QAAA;MAAA;IACA,CARA;IAUAC,QAVA,oBAUAC,IAVA,EAUA;MACA;MACA;MACA;IACA,CAdA;IAgBAC,UAhBA,sBAgBAD,IAhBA,EAgBA;MACA;MACA;MACA;IACA,CApBA;IAsBAE,iBAtBA,+BAsBA;MACA;MACA3C,8EACA;QACA;UACAA;QACA;MACA,CALA;MAOA;MACA;IACA,CAjCA;IAmCA4C,KAnCA,mBAmCA;MAAA;;MACA;MACA;QACA;QACA;MACA,CAHA;IAIA,CAzCA;IA2CAC,WA3CA,yBA2CA;MAAA;;MACA;MACA;QACA;QACA;MACA,CAHA;IAIA,CAjDA;IAmDAC,IAnDA,kBAmDA;MACA;QACAC;MACA,CAFA,MAEA;QACA;MACA;;MACA;IACA;EA1DA;AA9GA","names":["ref","watch","components","SalesmanForm","setup","Active","Inactive","title","id","store","statusOptions","filter","alert","icons","mdiAccountEdit","mdiDeleteCircle","mdiCancel","search","statusColor","data","message","type","show","dialog","dialogDelete","headers","text","align","sortable","value","editedIndex","editedItem","code","description","days","is_active","actions","quota","defaultItem","mode","computed","formTitle","salesmans","loading","val","created","methods","closeUserCreate","setTimeout","editItem","item","deleteItem","deleteItemConfirm","close","closeDelete","save","Object"],"sourceRoot":"src/views/pages/master-files/salesman","sources":["SalesmanListTable.vue"],"sourcesContent":["<template>\n  <div>\n    <v-alert\n      :type=\"alert.type\"\n      dismissible\n      :value=\"alert.show\"\n    >\n      {{ alert.message }}\n    </v-alert>\n    <v-data-table\n      :headers=\"headers\"\n      :items=\"salesmans\"\n      :search=\"search\"\n      class=\"elevation-1 font-weight-light\"\n      :loading=\"loading\"\n      sort-by=\"name\"\n      fixed-header\n    >\n      <!-- is_active -->\n      <template #[`item.is_active`]=\"{item}\">\n        <div class=\"d-flex justify-center\">\n          <v-chip\n            small\n            :class=\"`${statusColor[item.is_active]}--text`\"\n            class=\"v-chip-light-bg text-center\"\n          >\n            {{ item.is_active }}\n          </v-chip>\n        </div>\n      </template>\n      <template v-slot:top>\n        <v-toolbar\n          flat\n        >\n          <v-col\n            cols=\"12\"\n            offset-md=\"12\"\n            md=\"2\"\n          >\n            <v-toolbar-title>Salesman</v-toolbar-title>\n          </v-col>\n          <v-divider\n            class=\"mx-2\"\n            inset\n            vertical\n          ></v-divider>\n          <v-card-text>\n            <v-row>\n              <v-col\n                cols=\"4\"\n              >\n                <v-text-field\n                  v-model=\"search\"\n                  :append-icon=\"icons.mdiMagnify\"\n                  label=\"Search\"\n                  single-line\n                  hide-details\n                ></v-text-field>\n              </v-col>\n              <v-col\n                cols=\"4\"\n                offset-md=\"4\"\n              >\n                <v-select\n                  v-model=\"filter\"\n                  dense\n                  outlined\n                  multiple\n                  :prepend-inner-icon=\"icons.mdiHumanEdit\"\n                  item-text=\"title\"\n                  item-value=\"id\"\n                  label=\"Status\"\n                  :items=\"statusOptions\"\n                  hide-details=\"auto\"\n                ></v-select>\n              </v-col>\n            </v-row>\n          </v-card-text>\n          <v-dialog\n            v-model=\"dialog\"\n            max-width=\"900px\"\n            max-height=\"900px\"\n            height=\"500px\"\n          >\n            <template v-slot:activator=\"{ on, attrs }\">\n              <v-btn\n                color=\"primary\"\n                dark\n                class=\"mb-2\"\n                v-bind=\"attrs\"\n                v-on=\"on\"\n              >\n                Create Salesman\n              </v-btn>\n            </template>\n            <v-card>\n              <v-card-title>\n                <span class=\"headline\">{{ formTitle }}</span>\n              </v-card-title>\n              <v-card-text>\n                <salesman-form\n                  :mode=\"mode\"\n                  :salesman=\"editedItem\"\n                  @clicked=\"dialog=false\"\n                ></salesman-form>\n              </v-card-text>\n            </v-card>\n          </v-dialog>\n          <v-dialog\n            v-model=\"dialogDelete\"\n            max-width=\"500px\"\n          >\n            <v-card>\n              <v-card-title>\n                Are you sure you want to deactivate this? ?\n              </v-card-title>\n              <v-card-actions>\n                <v-spacer></v-spacer>\n                <v-btn\n                  color=\"error\"\n                  text\n                  @click=\"closeDelete\"\n                >\n                  Cancel\n                </v-btn>\n                <v-btn\n                  color=\"success\"\n                  text\n                  @click=\"deleteItemConfirm\"\n                >\n                  OK\n                </v-btn>\n                <v-spacer></v-spacer>\n              </v-card-actions>\n            </v-card>\n          </v-dialog>\n        </v-toolbar>\n      </template>\n      <template v-slot:item.actions=\"{ item }\">\n\n        <v-tooltip bottom color=\"primary\">\n          <template v-slot:activator=\"{ on, attrs }\">\n            <v-icon\n              medium\n              class=\"mr-2\"\n              v-bind=\"attrs\"\n              v-on=\"on\"\n              @click=\"editItem(item)\"\n            >\n              {{ icons.mdiAccountEdit }}\n            </v-icon>\n          </template>\n          <span>Edit</span>\n        </v-tooltip>\n\n        <v-tooltip bottom color=\"primary\" v-if=\"item.is_active === 'Active'\">\n          <template v-slot:activator=\"{ on, attrs }\">\n            <v-icon\n              v-if=\"item.is_active === 'Active'\"\n              small\n              v-bind=\"attrs\"\n              v-on=\"on\"\n              @click=\"deleteItem(item)\"\n            >\n              {{ icons.mdiCancel }}\n            </v-icon>\n          </template>\n          <span>Deactivate</span>\n        </v-tooltip>\n\n      </template>\n      <template v-slot:no-data>\n        <v-btn\n          color=\"primary\"\n        >\n          Refresh\n        </v-btn>\n      </template>\n    </v-data-table>\n  </div>\n</template>\n\n<script>\nimport { mdiAccountEdit, mdiDeleteCircle, mdiCancel } from '@mdi/js'\nimport {\n  ref,\n  watch,\n} from '@vue/composition-api'\nimport SalesmanForm from '@/views/pages/master-files/salesman/SalesmanForm.vue'\nimport store from '@/store'\n\nexport default {\n  components: {\n    SalesmanForm,\n  },\n  setup() {\n    const statusColor = {\n      Active: 'success',\n      Inactive: 'error',\n    }\n\n    const search = ref()\n    const filter = ref()\n    const statusOptions = ref([\n      {\n        title: 'Active',\n        id: 'Active',\n      },\n      {\n        title: 'Inactive',\n        id: 'Inactive',\n      },\n    ])\n\n    watch(filter, value => {\n      store.dispatch('SalesmanStore/filter', filter.value)\n    })\n\n    return {\n      statusOptions,\n      filter,\n      alert,\n      icons: {\n        mdiAccountEdit,\n        mdiDeleteCircle,\n        mdiCancel,\n      },\n      search,\n      statusColor,\n    }\n  },\n  data: () => ({\n    alert: {\n      message: '',\n      type: 'success',\n      show: false,\n    },\n    dialog: false,\n    dialogDelete: false,\n    headers: [\n      {\n        text: 'Salesman Code',\n        align: 'start',\n        sortable: true,\n        value: 'salesman_code',\n      },\n      { text: 'Salesman Name', value: 'salesman_name' },\n      { text: 'Quota', value: 'quota' },\n      { text: 'Notes', value: 'notes', align: 'center' },\n      {\n        text: 'Status', value: 'is_active', align: 'center', sortable: true,\n      },\n      { text: 'Actions', value: 'actions', sortable: false },\n    ],\n    editedIndex: -1,\n    editedItem: {\n      code: '',\n      description: '',\n      days: '',\n      is_active: '',\n      actions: '',\n      quota: null,\n    },\n    defaultItem: {\n      code: '',\n      quota: null,\n      description: '',\n      days: '',\n      is_active: false,\n      actions: '',\n    },\n    mode: 'create',\n  }),\n\n  computed: {\n    formTitle() {\n      // eslint-disable-next-line vue/no-side-effects-in-computed-properties\n      this.mode = this.editedIndex === -1 ? 'create' : 'edit'\n\n      return this.editedIndex === -1 ? 'New Salesman' : 'Edit Salesman'\n    },\n    salesmans() {\n      return this.$store.state.SalesmanStore.salesmans\n    },\n    loading() {\n      return this.$store.state.SalesmanStore.loading\n    },\n  },\n\n  watch: {\n    dialog(val) {\n      return val || this.close()\n    },\n    dialogDelete(val) {\n      return val || this.closeDelete()\n    },\n  },\n  created() {\n    this.$store.dispatch('SalesmanStore/list')\n    this.$store.dispatch('SalesmanStore/removeErrors')\n  },\n  methods: {\n    closeUserCreate(value) {\n      this.dialog = false\n      this.alert.message = value.alertMessage\n      this.alert.type = value.alertType\n      this.alert.show = true\n\n      setTimeout(() => { this.alert.show = false }, 1500)\n    },\n\n    editItem(item) {\n      this.editedIndex = this.salesmans.indexOf(item)\n      this.editedItem = { ...item }\n      this.dialog = true\n    },\n\n    deleteItem(item) {\n      this.editedIndex = this.salesmans.indexOf(item)\n      this.editedItem = { ...item }\n      this.dialogDelete = true\n    },\n\n    deleteItemConfirm() {\n      this.salesmans[this.editedIndex].is_active = false\n      store.dispatch('SalesmanStore/update', this.salesmans[this.editedIndex]).then(\n        response => {\n          if (response.status === undefined) {\n            store.dispatch('SalesmanStore/list')\n          }\n        },\n      )\n      this.salesmans[this.editedIndex].is_active = 'Inactive'\n      this.closeDelete()\n    },\n\n    close() {\n      this.dialog = false\n      this.$nextTick(() => {\n        this.editedItem = { ...this.defaultItem }\n        this.editedIndex = -1\n      })\n    },\n\n    closeDelete() {\n      this.dialogDelete = false\n      this.$nextTick(() => {\n        this.editedItem = { ...this.defaultItem }\n        this.editedIndex = -1\n      })\n    },\n\n    save() {\n      if (this.editedIndex > -1) {\n        Object.assign(this.users[this.editedIndex], this.editedItem)\n      } else {\n        this.users.push(this.editedItem)\n      }\n      this.close()\n    },\n  },\n}\n</script>\n"]}]}